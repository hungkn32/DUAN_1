<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#CA6B6B"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layouttop"
        android:layout_marginTop="10dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spchiteietback"
            android:src="@drawable/back"
            android:backgroundTint="#CA6B6B"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/imgchitiet"
            android:src="@drawable/img_17"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/txtTenSanPham"
                />
            <TextView
                android:id="@+id/txtMaSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="Mã sản phẩm"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/txtLoaiSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="Loại Sản Phẩm"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gi_25"
                android:textSize="20dp"
                android:id="@+id/txtGiaSanPham"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#DC1111"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnThemVaoGio"
                android:hint="@string/th_m_v_o_gi_h_ng"
                android:backgroundTint="#E91E63"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:textSize="18dp"
                android:textColor="@color/white"

                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô Tả Chi Tiêt"
            android:textColor="#D8AEAE"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D8AEAE"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/txtmota"
            />
    </LinearLayout>
</LinearLayout>