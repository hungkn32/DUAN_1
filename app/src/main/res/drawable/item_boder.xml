<!-- res/drawable/border_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the view is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Color when pressed (black) -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Border color when pressed (black) -->
            <corners android:radius="8dp" /> <!-- Rounded corners if needed -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Default background color (white) -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Default border color (black) -->
            <corners android:radius="8dp" /> <!-- Rounded corners if needed -->
        </shape>
    </item>
</selector>